datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model JobSeeker {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())

    firstname String
    lastname  String
    email     String
    country   String
    address   String
    city      String
    state     String
    postal    String
    specialty String

    @@index([id])
}

model Post {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())

    content   String @db.VarChar(255)
    authorId  String

    @@index([authorId])
}
